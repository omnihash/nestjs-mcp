{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false
  },
  "include": ["lib/**/*", "examples/tools", "examples/app.module.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "tests"]
}
